<PreferenceScreen xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/preferences_header">

        <EditTextPreference
            app:key="nombre"
            app:title="@string/nombre_heroe_preferences"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="reply"
            app:entries="@array/reply_entries"
            app:entryValues="@array/reply_values"
            app:key="arma"
            app:title="@string/arma_heroe_preferences"
            app:useSimpleSummaryProvider="true" />
        <SwitchPreference
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:defaultValue="false"
            app:key="facil"
            tools:title="@string/modo_facil_preferences" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/vampiros_preference"
            android:title="@string/vampiros_preference" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/demonios_preferences"
            android:title="@string/demonios_preferences" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/orcos_preferences"
            android:title="@string/orcos_preferences" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/trolls_preferences"
            android:title="@string/trolls_preferences" />

    </PreferenceCategory>

</PreferenceScreen>