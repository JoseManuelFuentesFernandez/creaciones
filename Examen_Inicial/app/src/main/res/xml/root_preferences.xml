<PreferenceScreen xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/preferences_header">

        <EditTextPreference
            app:key="nombre"
            app:title="@string/nombre_heroe_preferences"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="reply"
            app:entries="@array/etiqueta_arma"
            app:entryValues="@array/valor_arma"
            app:key="arma"
            app:title="@string/arma_heroe_preferences"
            app:useSimpleSummaryProvider="true" />
        <SwitchPreference
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:defaultValue="false"
            app:key="facil"
            app:title="@string/modo_facil_preferences" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/vampiros_preference"
            android:title="@string/vampiros_preference" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/demonios_preferences"
            android:title="@string/demonios_preferences" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/orcos_preferences"
            android:title="@string/orcos_preferences" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/trolls_preferences"
            android:title="@string/trolls_preferences" />

        <Preference
            android:key="button_preference"
            android:title="Button Preference"
            android:summary="Haz clic para empezar la partida"
            app:icon="@drawable/ic_baseline_play_arrow_24"
            app:layout="@layout/button_preferences" />

    </PreferenceCategory>

</PreferenceScreen>